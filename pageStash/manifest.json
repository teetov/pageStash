{
"manifest_version": 2,
"name": "Page stash",
"version": "1.0",

"description": "I will read it in later. I promise.",

"icons": {
  "16": "icons/icon_16.png",
  "32": "icons/icon_32.png",
  "128": "icons/icon_128.png"
},

"background": {
  "scripts": [
    "js/contextMenu.js",
	"js/dataStorage.js"
  ]
},

"permissions": [
  "contextMenus",
  "tabs",
  "storage"
],

"browser_action": {
  "default_title": "Read it later",
  "default_popup": "procrPopup.htm"
}

}